<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_id"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/item_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item ID"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/item_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item name"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Quantity"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/item_quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item quantity"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Location"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/item_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item location"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Level"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/alert_level_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter alert level"
        android:inputType="number" />

</LinearLayout>
